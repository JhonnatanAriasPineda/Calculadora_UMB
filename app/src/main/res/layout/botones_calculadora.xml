<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="5">

        <Button
            android:id="@+id/buttonCA"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#d4d4d2"
            android:text="CA"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#d4d4d2"
            android:text="C"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonPor"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#d4d4d2"
            android:text="%"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ff9500"
            android:text="รท"
            android:textSize="40sp"
            app:cornerRadius="50dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ff9500"
            android:text="x"
            android:textSize="40sp"
            app:cornerRadius="50dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonResta"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ff9500"
            android:text="-"
            android:textSize="40sp"
            app:cornerRadius="50dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonSuma"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ff9500"
            android:text="+"
            android:textSize="40sp"
            app:cornerRadius="50dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonPunto"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#505050"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="50dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ff9500"
            android:text="="
            android:textSize="40sp"
            app:cornerRadius="50dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>